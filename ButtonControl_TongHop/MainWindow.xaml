<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="Tổng 2 số" Height="450" Width="800">
    <StackPanel>
        <Label Target="{Binding ElementName=txtA}">
            Hệ số a:
        </Label>
        <TextBox Name="txtA"></TextBox>
        <Label Target="{Binding ElementName=txtB}">
            Hệ số b:
        </Label>
        <TextBox Name="txtB"></TextBox>
        <TextBlock>Kết Quả:</TextBlock>
        <TextBox Name="tbKetQua" Background="Yellow"></TextBox>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnTong" Width="79" Margin="10" Click="BtnTong_Click" Height="28">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://siteoforigin:,,,/Images/sum.png" Height="20" Width="17"/>
                    <TextBlock Margin="5,0">Tổng</TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="btnThoat" Width="76" Margin="10" Click="BtnThoat_Click" Height="25">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://siteoforigin:,,,/Images/thoat.png" Height="42" Width="12"/>
                    <TextBlock Margin="5,0" Height="17">Thoát</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
